<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="lokeshsaini.authenticationsample.MainActivity">

    <Button
        android:id="@+id/account_kit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        style="@style/Widget.AppCompat.Button.Colored"
        android:gravity="center_horizontal"
        android:padding="@dimen/activity_vertical_margin"
        android:text="@string/account_kit" />

    <Button
        android:id="@+id/digits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        style="@style/Widget.AppCompat.Button.Colored"
        android:gravity="center_horizontal"
        android:padding="@dimen/activity_vertical_margin"
        android:text="@string/fabric_digits" />

    <Button
        android:id="@+id/firebase_referral"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        style="@style/Widget.AppCompat.Button.Colored"
        android:gravity="center_horizontal"
        android:padding="@dimen/activity_vertical_margin"
        android:text="@string/firebase_referral" />

</LinearLayout>
